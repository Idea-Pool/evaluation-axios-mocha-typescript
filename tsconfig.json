{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "module": "commonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "noEmit": true,
        "esModuleInterop": true,
        "pretty": true,
        "allowJs": false,
        "checkJs": false,
        "baseUrl": "./",
        "strict": false,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "ESNext"
        ],
        "paths": {
            "*": [
                "src/*",
                "tests/*"
            ],
            "@config/*": ["./src/config/*"],
            "@db/*": ["./src/db/*"],
            "@services/*": ["./src/services/*"],
            "@support/*": ["./src/support/*"]
        }
    },
    "exclude": [
        "node_modules",
        "mochawesome-report",
        "logs"
    ],
    "include": [
        "src",
        "tests"
    ]
}